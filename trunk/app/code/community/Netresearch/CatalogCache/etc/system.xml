/**
 * Rewrite of Product list to enable caching
 *
 * @category   Netresearch
 * @package    Netresearch_CatalogCache
 * @author     Netresearch <info@netresearch.de>
 */
 -->

<config>
    <sections>
        <catalog>
            <groups>
                <frontend>
                    <fields>
                        <cache_view translate="label comment">
                            <label>Use advanced Cache for products page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cache_view>
                        <cache_list translate="label comment">
                            <label>Use advanced Cache for products list page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cache_list>
                        <refresh_cache_when_stock_is translate="label comment">
                            <label>Refresh the Product cache when the stock equals</label>
                            <comment>comma separated, leave empty for every time a product was bought.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </refresh_cache_when_stock_is>
                    </fields>
                </frontend>
            </groups>
        </catalog>
    </sections>
</config>